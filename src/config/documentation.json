{
  "openapi": "3.1.0",
  "info": {
    "title": "API Jeu de Rôle (Anima)",
    "version": "1.0.0",
    "description": "API pour la gestion des utilisateurs (joueurs) et des personnages, inspirée du jeu de rôle Anima: Beyond Fantasy."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Serveur de développement local"
    },
    {
      "url": "https://personnagesapi-f7fwaaddehfpc9eb.canadacentral-01.azurewebsites.net",
      "description": "Serveur de production"
    }
  ],
  "tags": [
    {
      "name": "Authentification",
      "description": "Opérations de connexion et de génération de jeton (Token)."
    },
    {
      "name": "Utilisateurs (Joueurs)",
      "description": "Gestion des comptes joueurs."
    },
    {
      "name": "Personnages",
      "description": "Création, consultation et modification des personnages de jeu."
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/generatetoken": {
      "post": {
        "summary": "Générer un jeton JWT",
        "tags": ["Authentification"],
        "description": "Authentifie un utilisateur avec son email et mot de passe, et retourne un jeton JWT pour l'accès aux routes sécurisées.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userLogin": {
                    "type": "object",
                    "required": ["email", "motDePasse"],
                    "properties": {
                      "email": {
                        "type": "string",
                        "format": "email",
                        "example": "joueur@exemple.com"
                      },
                      "motDePasse": {
                        "type": "string",
                        "format": "password",
                        "example": "monMotDePasse"
                      }
                    }
                  }
                }
              },
              "example": {
                "userLogin": {
                  "email": "joueur@exemple.com",
                  "motDePasse": "monMotDePasse"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Jeton généré avec succès.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "Le jeton JWT à utiliser pour l'authentification.",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Non autorisé (Identifiants invalides)."
          },
          "400": {
            "description": "Requête invalide (paramètres manquants ou invalides)."
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Récupérer un utilisateur par ID",
        "tags": ["Utilisateurs (Joueurs)"],
        "description": "Récupère les informations d'un utilisateur spécifique.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "ID MongoDB de l'utilisateur à récupérer."
          }
        ],
        "responses": {
          "200": {
            "description": "Utilisateur récupéré avec succès.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "required": ["nom", "email", "motDePasse"],
                      "properties": {
                        "_id": {
                          "type": "string",
                          "example": "65b98e1f592657e2501a357f"
                        },
                        "nom": {
                          "type": "string",
                          "maxLength": 100,
                          "example": "Jane Doe"
                        },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "example": "jane.doe@example.com"
                        },
                        "motDePasse": {
                          "type": "string",
                          "description": "Hachage du mot de passe (ne sera pas retourné en production).",
                          "example": "HASHED_PASSWORD"
                        },
                        "created": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2024-01-31T12:00:00.000Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Utilisateur non trouvé."
          },
          "401": {
            "description": "Non autorisé (Token manquant ou invalide)."
          }
        }
      }
    },
    "/users/add": {
      "post": {
        "summary": "Ajouter un nouvel utilisateur",
        "tags": ["Utilisateurs (Joueurs)"],
        "description": "Crée un nouveau compte utilisateur. Ne nécessite pas d'authentification.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "object",
                    "required": ["nom", "email", "motDePasse"],
                    "properties": {
                      "nom": {
                        "type": "string",
                        "maxLength": 100,
                        "example": "Jean Le Joueur"
                      },
                      "email": {
                        "type": "string",
                        "format": "email",
                        "example": "nouveau@mail.com"
                      },
                      "motDePasse": {
                        "type": "string",
                        "minLength": 8,
                        "example": "monMotDePasse123"
                      }
                    }
                  }
                }
              },
              "example": {
                "user": {
                  "nom": "Jean Le Joueur",
                  "email": "nouveau@mail.com",
                  "motDePasse": "monMotDePasse123"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Utilisateur créé avec succès."
          },
          "400": {
            "description": "Requête invalide (validation des données échouée ou paramètres manquants)."
          }
        }
      }
    },
    "/users/delete/{id}": {
      "delete": {
        "summary": "Supprimer un utilisateur",
